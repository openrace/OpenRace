[Unit]
Description=Openrace RaceTracker Watchdog
After=network.target
{% if ansible_lsb.id|lower() == "raspbian" %}Requires=or-udev.service{% endif %}


[Service]
User={{ ansible_user_id }}
Group={{ ansible_user_id }}
ExecStart={{ playbook_dir }}/../tools/racetracker_watchdog.sh

[Install]
WantedBy=multi-user.target
